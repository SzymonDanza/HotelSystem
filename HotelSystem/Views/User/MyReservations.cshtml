@model IEnumerable<HotelSystem.Models.Reservation>

<h1>My Reservations</h1>
<table class="table">
    <thead>
        <tr>
            <th>Room Name</th>
            <th>Check-In Date</th>
            <th>Check-Out Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Room.Name</td>
                <td>@reservation.CheckInDate.ToShortDateString()</td>
                <td>@reservation.CheckOutDate.ToShortDateString()</td>
                <td>
                    <form asp-controller="User" asp-action="CancelReservation" method="post">
                        <input type="hidden" name="reservationId" value="@reservation.Id" />
                        <button type="submit" class="btn btn-danger">Cancel</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
