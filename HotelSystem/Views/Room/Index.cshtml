@model List<RoomViewModel>

@{
    ViewData["Title"] = "Pokoje";
}

<h1>Pokoje</h1>

<div class="row">
    @foreach (var room in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@room.Name</h5>
                    <p class="card-text">
                        <strong>Połemność:</strong> @room.Capacity <br>
                        <strong>Cena za noc:</strong> @room.PricePerNight zł
                    </p>
                    <!-- Przycisk do przeliczenia ceny na USD -->
                    <button class="btn btn-primary" onclick="getPriceInUsd(@room.PricePerNight)">Sprawdź cenę w dolarach</button>
                    <div id="priceInUsd-@room.Name" class="mt-2"></div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function getPriceInUsd(priceInPLN) {
        // Wysyłanie zapytania AJAX do kontrolera
        fetch(`/Room/GetPriceInUsd?priceInPLN=${priceInPLN}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Jeśli sukces, wyświetl przeliczoną cenę
                    alert(`Cena w USD: ${data.priceInUsd}`);
                } else {
                    // Jeśli błąd, wyświetl komunikat
                    alert(data.message);
                }
            })
            .catch(error => {
                // Obsługa błędów
                console.error("Błąd podczas pobierania ceny w dolarach: ", error);
                alert("Wystąpił błąd podczas pobierania ceny.");
            });
    }
</script>
