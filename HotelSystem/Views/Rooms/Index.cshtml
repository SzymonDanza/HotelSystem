@model IEnumerable<HotelSystem.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<h2>Rooms</h2>

<a asp-action="Create" class="btn btn-primary">Add Room</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Capacity</th>
            <th>Price per Night</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Name</td>
                <td>@room.Capacity</td>
                <td>@room.PricePerNight</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
