@model HotelSystem.Models.Room

<h1>Edytuj pokój</h1>
<form asp-action="EditRoom" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Name">Nazwa</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label for="Capacity">Pojemność</label>
        <input type="number" class="form-control" asp-for="Capacity" />
    </div>
    <div class="form-group">
        <label for="PricePerNight">Cena za noc</label>
        <input type="number" step="0.01" class="form-control" asp-for="PricePerNight" />
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
