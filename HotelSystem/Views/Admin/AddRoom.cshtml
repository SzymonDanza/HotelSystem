@model HotelSystem.Models.Room

<h1>Dodaj pokój</h1>
<form asp-action="AddRoom" method="post">
    <div class="form-group">
        <label for="Name">Nazwa</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Capacity">Pojemność</label>
        <input type="number" class="form-control" id="Capacity" name="Capacity" required />
    </div>
    <div class="form-group">
        <label for="PricePerNight">Cena za noc</label>
        <input type="number" step="0.01" class="form-control" id="PricePerNight" name="PricePerNight" required />
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
