@model IEnumerable<HotelSystem.Models.RoomAvailabilityModel>

@{
    var startDate = DateTime.Now;
    var endDate = startDate.AddMonths(1);
    var daysInMonth = Enumerable.Range(0, (endDate - startDate).Days + 1)
                                .Select(d => startDate.AddDays(d))
                                .ToList();
}

<h1>Room Availability Calendar</h1>

@foreach (var room in Model)
{
    <h3>@room.RoomName</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Availability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var day in daysInMonth)
            {
                <tr>
                    <td>@day.ToString("yyyy-MM-dd")</td>
                    <td style="background-color: @(room.Availability[day] ? "green" : "red");">
                        @(room.Availability[day] ? "Available" : "Reserved")
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
