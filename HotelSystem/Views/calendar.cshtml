                    }

                    <td class="@((day.IsReserved) ? "reserved" : "available")">
                        @day.Day
                    </td>

                    if (i % 7 == 6)
                    {
                </tr>
            }
        }
    </tbody>
</table>

<style>
    .calendar {
        width: 100%;
        border-collapse: collapse;
    }

    .calendar td, .calendar th {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: center;
    }

    .calendar .available {
        background-color: green;
        color: white;
    }

    .calendar .reserved {
        background-color: red;
        color: white;
    }
</style>
