@model CalendarViewModel

@{
    ViewData["Title"] = "Kalendarz Rezerwacji";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="calendar mt-4">
        @for (int month = 0; month < Model.CalendarDays.Count; month++)
        {
            <div class="month-container mb-4">
                <h4 class="text-center">
                    @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(month + 1)
                </h4>
                <div class="row g-2 justify-content-center">
                    @foreach (var day in Model.CalendarDays[month])
                    {
                        @if (day == null)
                        {
                            <div class="col-2"></div> <!-- Puste miejsce w kalendarzu -->
                        }
                        else
                        {
                            <div class="col-2">
                                <button class="btn @day.CssClass w-100">
                                    @day.Day
                                </button>
                            </div>
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
    .calendar {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .month-container {
        width: 100%;
    }
    .btn-success {
        background-color: green;
        color: white;
    }
    .btn-danger {
        background-color: red;
        color: white;
    }
</style>
